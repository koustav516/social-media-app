extends layouts/auth-layout.pug

block content
        .loginContainer 
            h1 Register 
            form#registerForm(method="post", onsubmit="event.preventDefault(); validateForm();")

                p.errorMessage #{errorMessage}

                input(type="text", class="input-style",name="firstname", placeholder="Firstname", value = firstname,required="")
                input(type="text", class="input-style",name="lastname", placeholder="Lastname",value = email, required="")
                input(type="text", class="input-style",name="username", placeholder="Username", value = username,required="")
                input(type="email", class="input-style",name="email", placeholder="Email", value = email,required="")
                input#password(type="password", class="input-style",name="password", placeholder="Password", required="")
                input#passwordConfirm(type="password", class="input-style",name="passwordConfirm", placeholder="Confirm password", required="")
                input(type="submit", value="Login")
            a(href="/login") Have an account? Click here  

        script. 
            const passwordField = document.getElementById("password")
            const passwordConfirm = document.getElementById("passwordConfirm")
            const form = document.getElementById("registerForm")

            function validateForm() {
                if(passwordField.value != passwordConfirm.value) {
                    alert("Password didn't match");
                } else {
                    form.submit();
                }
            }